const tarea = {
    Nombre: `Carlos`,
    Apellido: `Rivera`,
    Nombre_usuario: `crivera`,
    Edad: 38,
    Email: `c83rivera@yahoo.com`,
    Mayor_edad: `Si`,
    Dinero_ahorrado: 800,
    Deudas: 100,
}
console.log(`El Nombre Completo es:`,tarea.Nombre, tarea.Apellido);
console.log(`Dinero real:`,tarea.Dinero_ahorrado-tarea.Deudas);

