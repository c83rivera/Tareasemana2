const producto = {
    nombre: 'Televisor',
    precio: 700,
    stock: 12,
}
const caliva = Math.trunc(producto.precio*12/100);

console.log("El Nombre es:",producto.nombre);
console.log("El Precio es: $",producto.precio);
console.log("El Stock es: ",producto.stock-1);
console.log("El IVA es: $",caliva);
